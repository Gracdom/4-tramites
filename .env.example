# Database URL para Prisma (Supabase PostgreSQL)
# Obtén esto de: Supabase Dashboard > Settings > Database > Connection string
# Formato: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:YOUR-PASSWORD@db.xxxxx.supabase.co:5432/postgres"

# Supabase Project URL
# Obtén esto de: Supabase Dashboard > Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL="https://xxxxx.supabase.co"

# Supabase Anon Key (pública - segura para el frontend)
# Obtén esto de: Supabase Dashboard > Settings > API > Project API keys > anon public
NEXT_PUBLIC_SUPABASE_ANON_KEY="tu-anon-key-aqui"

# Supabase Service Role Key (privada - SOLO para backend, NUNCA expongas)
# Obtén esto de: Supabase Dashboard > Settings > API > Project API keys > service_role
SUPABASE_SERVICE_ROLE_KEY="tu-service-role-key-aqui"

# Resend (emails al cliente y notificaciones al admin)
# Crea una API key en https://resend.com/api-keys
RESEND_API_KEY="re_xxxx"
# Remitente (ej: "Tu Sitio <noreply@tudominio.com>" o "Trámites <onboarding@resend.dev>" para pruebas)
EMAIL_FROM="Trámites <onboarding@resend.dev>"
# Email del administrador (recibe notificación cuando alguien envía un formulario)
ADMIN_EMAIL="admin@tudominio.com"

# JWT para sesión de usuarios (panel mi-cuenta). Genera uno seguro en producción.
JWT_SECRET="genera-un-secreto-largo-y-aleatorio-aqui"

# Credenciales panel admin (/admin). Por defecto: admin@tramites.com / Admin123.
ADMIN_LOGIN_EMAIL="admin@tramites.com"
ADMIN_LOGIN_PASSWORD="Admin123."

# Node Environment
NODE_ENV="development"
